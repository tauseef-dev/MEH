<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:fontFamily="@font/aclonica"
        android:padding="8dp"

        android:text="Please Add The Food You Had"
        android:textAlignment="center"
        android:textColor="@color/fui_linkColor"
        android:textSize="24dp"
        android:textStyle="bold|italic" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/speech"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_weight="19"
        android:hint="Enter the Dish you ate:"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/mic"
        android:layout_width="28dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_mic_none_white_24dp"
        android:backgroundTint="@color/QRCodeBlackColor" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/loadNutri"

            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_custom"
            android:padding="6dp"
            android:text="Check Nutrients"

            android:textAlignment="center" />

        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Diet"
            android:background="@drawable/button_custom"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/listhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
       android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Qty"
            android:textColor="@color/QRCodeBlackColor"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Measure"
            android:textColor="@color/QRCodeBlackColor"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item Name"
            android:textColor="@color/QRCodeBlackColor"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <ListView
        android:id="@+id/componentsf"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_margin="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:id="@+id/caldisplay"
        android:visibility="gone">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Protiens"
            android:textStyle="italic"
            android:textColor="@color/QRCodeBlackColor"
            android:textSize="18dp"
             />

        <TextView
            android:id="@+id/protiens"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0g"
            android:textColor="?android:attr/textColorLinkInverse"
            android:textStyle="italic"
            android:textSize="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fat"
            android:textStyle="italic"
            android:textColor="@color/QRCodeBlackColor"
            android:layout_weight="2"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/fat"
            android:text="0g"
            android:textColor="?android:attr/textColorLinkInverse"
            android:textStyle="italic"
            android:layout_weight="1"
            android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Carbohydrates"
            android:textStyle="italic"
            android:textColor="@color/QRCodeBlackColor"
            android:layout_weight="2"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/carb"
            android:text="0g"
            android:textColor="?android:attr/textColorLinkInverse"
            android:textStyle="italic"
            android:layout_weight="1"
            android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cholestrol"
            android:textStyle="italic"
            android:textColor="@color/QRCodeBlackColor"
            android:layout_weight="2"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/chol"
            android:text="0mg"
            android:textColor="?android:attr/textColorLinkInverse"
            android:textStyle="italic"
            android:layout_weight="1"
            android:textSize="18dp"/>
    </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Total Calories"
            android:textAlignment="textStart"
            android:textColor="?attr/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cal"
            android:layout_weight="1"
            android:text="0cal"
            android:textAlignment="viewStart"
            android:textColor="@android:color/holo_purple"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/summary"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_custom"
           android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Summary" />
    </LinearLayout>
    </LinearLayout>



</LinearLayout>


</ScrollView>